{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"@assets/*": ["./assets/*"],
			"@components/*": ["./core/components/*"],
			"@constants/*": ["./core/constants/*"],
			"@hooks/*": ["./core/hooks/*"],
			"@navigation/*": ["./core/navigation/*"],
			"@services/*": ["./core/services/*"],
			"@styles/*": ["./core/styles/*"],
			"@types/*": ["./core/types/*"],
			"@screens/*": ["./screens/*"],
			"@env": [".env"]
		}
	}
}
